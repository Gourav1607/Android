<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gourav1607.calgo.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button7"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ECEFF1"
        android:gravity="end|bottom"
        android:padding="10dp"
        android:text="@string/char0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="50sp" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorAlternate"
        android:onClick="onClickClear"
        android:text="@string/charC"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/buttonC"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char0"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonEq"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button0"
        android:background="@color/colorAlternate"
        android:onClick="onClickEqual"
        android:text="@string/charEq"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/buttonC"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button0"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button4"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char2"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/buttonEq"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button2"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char3"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button1"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char4"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button2"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button4"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char5"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button3"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button2"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char6"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char7"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/button5"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button4"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char8"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/button6"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button5"
        android:background="@color/colorAlternate"
        android:onClick="onClickNumber"
        android:text="@string/char9"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/buttonEq"
        android:background="@color/colorAlternate"
        android:onClick="onClickOperator"
        android:text="@string/charAdd"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/buttonAdd"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button3"
        android:background="@color/colorAlternate"
        android:onClick="onClickOperator"
        android:text="@string/charSub"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonMul"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/buttonSub"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button6"
        android:background="@color/colorAlternate"
        android:onClick="onClickOperator"
        android:text="@string/charMul"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/buttonMul"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/button9"
        android:background="@color/colorAlternate"
        android:onClick="onClickOperator"
        android:text="@string/charDiv"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />
</RelativeLayout>
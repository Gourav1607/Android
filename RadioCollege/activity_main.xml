<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gourav1607.radiocollege.MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/computerScience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            android:layout_gravity="center_horizontal"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/mathematics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mathematics"
            android:layout_gravity="center_horizontal"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/economics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Economics"
            android:layout_gravity="center_horizontal"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/electronics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electronics"
            android:layout_gravity="center_horizontal"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/zoology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zoology"
            android:layout_gravity="center_horizontal"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/physics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physics"
            android:layout_gravity="center_horizontal"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:layout_gravity="center_horizontal"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/hindi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hindi"
            android:layout_gravity="center_horizontal"
            android:checked="false"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="Teacher In-Charge of Department"/>
</RelativeLayout>
